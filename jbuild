(* -*- tuareg -*- *)
#require "unix"

let version =
  let ic = Unix.open_process_in "ocamlc -version" in
  let version = input_line ic in
  close_in ic;
  version

let () = Printf.ksprintf Jbuild_plugin.V1.send {|
(jbuild_version 1)

(rule
 ((targets (extend_helper.ml))
  (deps (extend_helper.cppo.ml))
  (action (run cppo -V OCAML:%s ${<} -o ${@}))))

(library
 ((name merlin_extend)
  (public_name merlin-extend)
  (libraries (compiler-libs))
  (wrapped false)))
|} version
